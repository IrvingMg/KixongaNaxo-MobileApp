<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".Restablecer">

    <TextView
        android:id="@+id/etiquetaTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Kixonga Naxo"
        android:textAlignment="center"
        android:textSize="48dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etiquetaTitulo"
        android:layout_marginTop="48dp"
        android:hint="Correo"
        app:helperText="Ingrese su correo para restablecer la contraseÃ±a. ">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/restablecer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restablecer"
        android:layout_below="@id/correo"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>